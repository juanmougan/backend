<h1>Listado de Alumnos</h1>
<table>
  <thead>
    <tr>
      <!-- <th>CSV ID</th> -->
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Número de Registro</th>
      <th>Carrera</th>
      <th>Usa GCM?</th>
      <th>Email</th>
      <th>Cursadas</th>
      <th colspan="3">Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <!-- <td><%= student.csv_id %></td> -->
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.file_number %></td>
        <td><%= get_career_data_nil_safe(student.career) %></td>
        <td><%= retrieve_regid_status(student.regid) %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Cursadas', [student, :enrollments] %></td>
        <td><%= link_to 'Ver', student %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Borrar', student, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

