<p id="notice"><%= notice %></p>

<h1>Listado de Listas de Entrega</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscription_lists.each do |subscription_list| %>
      <tr>
        <td><%= subscription_list.id %></td>
        <td><%= subscription_list.name %></td>
        <td><%= subscription_list.description %></td>
        <td><%= link_to 'Ver', subscription_list %></td>
        <td><%= link_to 'Editar', edit_subscription_list_path(subscription_list) %></td>
        <td><%= link_to 'Borrar', subscription_list, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Lista de Entrega', new_subscription_list_path %>
