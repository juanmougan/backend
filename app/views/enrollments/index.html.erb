<h1>Listado de Cursadas <%= get_student_full_name(@student) %></h1>

<table>
  <thead>
    <tr>
      <th>Año</th>
      <th>Nombre de la Materia</th>
      <!-- <th>Carrera</th> -->    <!-- TODO if this is necessary, deal with a nil Career for a Subject -->
      <th>Cátedra</th>
      <th>Turno</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.year %></td>
        <td><%= enrollment.subject.name %></td>
        <td><%# <%= enrollment.subject.career.name %></td>
        <td><%= enrollment.professorship %></td>
        <td><%= enrollment.shift %></td>
        <td><%= link_to 'Borrar', enrollment, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

